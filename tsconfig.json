{
    "compilerOptions": {
        //基本配置
        "module": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "allowJs": true,
        "experimentalDecorators": true, //es7 特性标签  
        "lib": [
            "dom",
            "es7",
            "scripthost"
        ],
        //错误检查
        /*"allowSyntheticDefaultImports": true,*/
        /*"preserveConstEnums":true,*/
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "alwaysStrict": true,
        //输出配置
        "target": "es5",
        "pretty": true,
        "noEmitOnError": true,
        "importHelpers": true,
        "removeComments": true,
        "inlineSources": false,
        "sourceMap": false
    },
    "exclude": [
        "node_modules"
    ]
}